<crawler id="cleaner">
    <name>epiphany</name>              
    <info>Web Browser</info>              
    <options id="cache">        
        <info>Deletes the cache</info>          
        <run cmd="" find="file" upath="~/.gnome2/epiphany/ephy-favicon-cache.xml" />
        <run cmd="" find="file" upath="~/.gnome2/epiphany/favicon_cache/" />
        <run cmd="" find="file" upath="~/.gnome2/epiphany/mozilla/epiphany/Cache/" />
        <run cmd="" find="file" upath="~/.cache/epiphany-browser/" />
        <run cmd="" find="file" upath="~/.gnome2/epiphany/mozilla/epiphany/cookies.txt" />
        <run cmd="" find="file" upath="~/.gnome2/epiphany/mozilla/epiphany/cookies.sqlite" />
        <run cmd="" find="file" upath="~/.gnome2/epiphany/mozilla/epiphany/cookies.sqlite-journal" />
        <run cmd="" find="file" upath="~/.config/epiphany/cookies.sqlite" />
    </options>
</crawler>