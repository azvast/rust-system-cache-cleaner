<crawler id="cleaner">
    <name>gimp</name>              
    <info>Free and Opensource image editor</info>              
    <options id="cache">        
        <info>Deletes the cache</info>          
        <run cmd="delete" find="walk_all" upath="~/.gimp-2.4/tmp/" />
        <run cmd="delete" find="walk_all" upath="~/.gimp-2.6/tmp/"/>
        <run cmd="delete" find="walk_all" upath="~/.gimp-2.8/tmp/"/>
        <run cmd="delete" find="walk_all" path="%USERPROFILE%\.gimp-2.4\tmp\" />
        <run cmd="delete" find="walk_all" path="%USERPROFILE%\.gimp-2.6\tmp\"/>
        <run cmd="delete" find="walk_all" path="%USERPROFILE%\.gimp-2.8\tmp\"/>
    </options>
</crawler>
