<crawler id="cleaner">
    <name>audacious</name>              
    <info>media player</info>              
    <options id="cache">        
        <info>Deletes the cache</info>          
        <run cmd="delete" find="walk_all" upath="~/.cache/audacious/thumbs/" />
        <run cmd="delete" find="file" upath="~/.config/audacious/log" />
        
        <!-- uncomment for deletion of reclently used 
        <run cmd="delete" find="file" upath="~/.config/audacious/playlist.xspf" /> -->
    </options>
</crawler>