<crawler id="cleaner">
    <name>flash</name>              
    <info>Adobe flash</info>              
    <options id="cache">        
        <info>Deletes the cache</info>          
        <run cmd="delete" find="walk_all" upath="~/.macromedia/Flash_Player/#SharedObjects/" />
        <run cmd="delete" find="walk_all" upath="~/.macromedia/Flash_Player/macromedia.com/support/flashplayer/sys/" />
        <run cmd="delete" find="walk_all" upath="~/.adobe/Flash_Player/AssetCache/" />
        <run cmd="delete" find="walk_all" upath="~/.adobe/Flash_Player/NativeCache/" />
        
        <run cmd="delete" find="walk_all" path="$APPDATA\Adobe\Flash Player\AssetCache\" />
        <run cmd="delete" find="walk_all" path="$APPDATA\Adobe\Flash Player\APSPrivateData2\" />
        <run cmd="delete" find="walk_all" path="$APPDATA\Adobe\Flash Player\NativeCache\" />
        <run cmd="delete" find="walk_all" path="$APPDATA\Macromedia\Flash Player\#SharedObjects\" />
        <run cmd="delete" find="walk_all" path="$APPDATA\Macromedia\Flash Player\macromedia.com\support\flashplayer\sys\" />
    </options>
</crawler>