<crawler id="cleaner">
    <name>LibreOffice</name>              
    <info>Office</info>              
    <options id="cache">        
        <info>Deletes the cache</info>          
        <run cmd="delete" find="walk_all" path="%APPDATA%\.libreoffice\3\user\uno_packages\cache\" />
        <run cmd="delete" find="walk_all" upath="~/.config/libreoffice/3/user/uno_packages/cache/" />
        <run cmd="delete" find="walk_all" upath="~/.libreoffice/3/user/uno_packages/cache/" />
        <run cmd="delete" find="walk_all" upath="~/.libreoffice/3-suse/user/config/uno_packages/cache/" />
    </options>
</crawler>