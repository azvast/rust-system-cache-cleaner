<cleaner id="libreoffice">
  <label>LibreOffice</label>
  <description>Office suite</description>
  <running type="exe">soffice.bin</running>
  <running type="exe">soffice.exe</running>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action command="delete" search="walk.all" path="$APPDATA\.libreoffice\3\user\uno_packages\cache\"/>
    <action command="delete" search="walk.all" path="~/.config/libreoffice/3/user/uno_packages/cache/"/>
    <action command="delete" search="walk.all" path="~/.libreoffice/3/user/uno_packages/cache/"/>
    <action command="delete" search="walk.all" path="~/.libreoffice/3-suse/user/config/uno_packages/cache/"/>
  </option>
  <option id="history">
    <label>History</label>
    <description>Delete the usage history</description>
    <!-- LibreOffice 3 on OpenSUSE from OpenSUSE repo uses ~/.libreoffice/3-suse/user// -->
    <!-- LibreOffice 3.4.5 on Fedora 16 uses ~/.libreoffice/3/user -->
    <!-- LibreOffice 3.5 on Mint 9 (Ubuntu 10.04) uses ~/.config/libreoffice/3/user/ -->
    <!-- LibreOffice 4 on Ubuntu 13.04 uses ~/.config/libreoffice/4/user -->
    <action command="office_registrymodifications" search="file" path="$APPDATA\LibreOffice\3\user\registrymodifications.xcu"/>
    <action command="office_registrymodifications" search="file" path="~/.config/libreoffice/3/user/registrymodifications.xcu"/>
    <action command="office_registrymodifications" search="file" path="~/.config/libreoffice/4/user/registrymodifications.xcu"/>
    <action command="office_registrymodifications" search="file" path="~/.libreoffice/3-suse/user/registrymodifications.xcu"/>
    <action command="office_registrymodifications" search="file" path="~/.libreoffice/3/user/registrymodifications.xcu"/>
  </option>
</cleaner>
