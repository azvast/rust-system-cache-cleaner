<crawler id="cleaner">
    <name>elinks</name>              
    <info>web browser</info>              
    <options id="cache">        
        <info>Deletes the cache</info>          
        <run cmd="delete" find="file" upath="~/.elinks/cookies"/>
        <run cmd="delete" find="file" upath="~/.elinks/globhist"/>
        <run cmd="delete" find="file" upath="~/.elinks/gotohist"/>
        <run cmd="delete" find="file" upath="~/.elinks/searchhist"/>
    </options>
</crawler>